<h1>To Do List</h1>
<hr />

 @if (@Model.Count == 0)
{
  <p>No tasks have been completed!</p>
}
else
{
  <h1>Here is your list of completed tasks:</h1>
  <ul>
    @foreach (var task in @Model)
    {
      <li><a href = '/tasks/@task.GetId()'>@task.GetDescription()</a></li>
    }
  </ul>
}

<p><a href="/">Return home</a></p>
