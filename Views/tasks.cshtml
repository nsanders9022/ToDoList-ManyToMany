<h1>To Do List</h1>
<hr />

@if (@Model.Count == 0)
{
  <p>No tasks have been added yet!</p>
}
else
{
  <h1>Here is your list of tasks:</h1>
  <ul>
    @foreach (var task in @Model)
    {
      <li><a href = '/tasks/@task.GetId()'>@task.GetDescription(), @task.GetDueDate()</a></li>
     <form action="/tasks/update/@task.GetId()" method="post">
         <input type="hidden" name="_method" value="PATCH">
      <button type="submit" class="btn">Mark as completed</button>
  </form>
    }
  </ul>
  <form action="/tasks/sorted" method="post">
      <button type="submit" class="btn">Sort by due date</button>
  </form>

  <form action="/tasks/delete" method="post">
    <button type="submit">Clear all tasks</button>
  </form>
}
<p><a href="/tasks/new">Add a new task</a></p>
<p><a href="/">Return home</a></p>

<p><a href ="/tasks/completed">See completed tasks</a></p>
